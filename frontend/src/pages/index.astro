---
import '../styles/global.css';
const base = import.meta.env.BASE_URL;
const docs = [
  { name: "Overview", link: `${base}overview/` },
  { name: "SporeDrop", link: `${base}sporedrop/` },
  { name: "Roadmap", link: `${base}roadmap/` },
];
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml+ico" href={`${base}favicon.ico`} />
    <meta name="viewport" content="width=device-width" />
    <title>PicnicTS Wiki</title>
  </head>
  <body class="min-h-screen bg-[#22281a] text-[#fdf6e3] font-sans">
    <div class="max-w-2xl mx-auto pt-16">
      <h1 class="mb-8 text-3xl font-bold">PicnicTS Documentation</h1>
      <ul>
        {docs.map(doc => (
          <li class="mb-4">
            <a href={doc.link} class="text-xl underline hover:text-yellow-400">
              {doc.name}
            </a>
          </li>
        ))}
      </ul>
    </div>
  </body>
</html>